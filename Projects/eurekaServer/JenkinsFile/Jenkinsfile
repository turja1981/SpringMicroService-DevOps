pipeline {
	agent any
	tools{ maven 'mvn-3.3.9' }
	stages {
		stage ('Initialize') {
			steps { sh '''
                    echo "PATH = ${PATH}"
                    echo "M2_HOME = ${M2_HOME}"
                ''' }
		}
		stage('Checkout SCM') {
			steps { checkout scm }
		}

		stage('Build') {
			steps {
				script {
				dir ('Projects/eurekaServer') {
					sh "mvn clean install -Dmaven.test.skip=true "
					}
				}
			}
		}
		
        stage('Image') {
	        steps {
	        script {
	            dir ('Projects/eurekaServer/dockerfile') {
	                def app = docker.build("turja/discovery-service:${env.version}")
	            }
	            }
            }
        }
        stage ('Run') {
        	steps {
        	script {
            	docker.image("turja/discovery-service:${env.version}").run('-p 8761:8761 -h discovery --name discovery')
            	}
            }
        }
               
	}
}

